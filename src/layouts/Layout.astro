---
import SiteHeader from "../components/SiteHeader.astro";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link
      rel="stylesheet"
      href="https://unpkg.com/tachyons@4.12.0/css/tachyons.min.css"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css"
    />
  </head>
  <body>
    <SiteHeader />
    <slot />
    <footer>
      <p class="tc f6">
        Contact David Gagne at 954-599-9738 for website assistance
      </p>
    </footer>
  </body>
</html>
<style is:global>
  :root {
    --theme-yellow: #f9f5ed;
    --theme-text-color: #777576;
    --theme-light-gray: #ebebeb;
    --theme-primary-color: #756daf;
  }

  @font-face {
    font-family: "Panton Narrow Regular";
    src: url("/fonts/PantonNarrow-Trial-Regular.ttf");
    font-weight: normal;
  }

  @font-face {
    font-family: "Panton Narrow Bold";
    src: url("/fonts/PantonNarrow-Trial-Bold.ttf");
    font-weight: bold;
  }

  html {
    font-family: "Panton Narrow Regular", sans-serif;
    color: var(--theme-text-color);
  }

  h1 {
    font-family: "Panton Narrow Bold", sans-serif;
    color: var(--theme-primary-color);
  }

  h2,
  h3 {
    font-family: "Panton Narrow Bold", sans-serif;
  }
</style>
